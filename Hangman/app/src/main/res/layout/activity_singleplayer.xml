<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".singleplayerActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/singlePlayerButton"
        android:textColor="#00FF08"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gallows" />

    <TextView
        android:id="@+id/WordToBeGuessed"
        android:layout_width="212dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="#00FF08"
        android:text="@string/textview"
        app:layout_constraintBottom_toTopOf="@+id/userGuess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/gallows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="135dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/gallows"
        android:scaleType="center"
        android:src="@drawable/hangman_gallow"
        app:layout_constraintBottom_toTopOf="@+id/wordsGuessed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/head"
        android:layout_width="117dp"
        android:layout_height="60dp"
        android:layout_marginTop="149dp"
        android:contentDescription="@string/head"
        android:src="@drawable/head"
        app:layout_constraintEnd_toStartOf="@+id/arm1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/arm2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/body"
        android:layout_width="116dp"
        android:layout_height="80dp"
        android:layout_marginTop="186dp"
        android:contentDescription="@string/body"
        android:src="@drawable/body"
        app:layout_constraintEnd_toStartOf="@+id/arm1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/arm2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/arm1"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="306dp"
        android:layout_marginLeft="306dp"
        android:layout_marginTop="209dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:contentDescription="@string/arm"
        android:src="@drawable/left_arm"
        app:layout_constraintBottom_toTopOf="@+id/leg1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/arm2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/arm2"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="214dp"
        android:layout_marginLeft="214dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:contentDescription="@string/arm"
        android:src="@drawable/right_arm"
        app:layout_constraintEnd_toStartOf="@+id/leg1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/leg1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="255dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:contentDescription="@string/leg"
        android:src="@drawable/left_leg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/arm2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/leg2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="255dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:contentDescription="@string/leg"
        android:src="@drawable/right_leg"
        app:layout_constraintEnd_toStartOf="@+id/arm1"
        app:layout_constraintStart_toStartOf="@+id/arm2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wordsGuessed"
        android:layout_width="162dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="7dp"
        android:background="#00FF08"
        android:text="@string/textview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gallows" />

    <EditText
        android:id="@+id/userGuess"
        android:layout_width="209dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:autofillHints="Enter letters here"
        android:background="#00FF08"
        android:ems="10"
        android:hint=""
        android:inputType="textPersonName"
        android:text="@string/name"
        app:layout_constraintBottom_toTopOf="@+id/wordsGuessed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>